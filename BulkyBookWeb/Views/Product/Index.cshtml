@model IEnumerable<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary-emphasis  ">Product List</h2>

        </div>
        <div class="col-6  text-end">
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary ">
                <i class="bi bi-plus-circle"></i> &nbsp; create new Product
            </a>

        </div>
        
    </div>

<table class="table table-bordered table-striped" style="width:100%">
@*     <thead>
        <tr>
            <th>
                Product Name
            </th>
            <th>
                Description
            </th>
            <th>
                Price:$
            </th>
        </tr>
    </thead> *@
    <tbody>
            <div class="row row-cols-1 row-cols-md-3 g-10 pt-5">
                @foreach (var obj in Model)
                {
                    <div class="col " >
                        <div class="card border-dark mb-3" style="max-width: 20rem;">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-text">Price</h6>
                                </div>
                                <span>@Html.DisplayFor(modelItem => obj.Price)$</span>
                                
                            </div>
                            <div class="card-body">
                                <h4 class="card-title text-black">@Html.DisplayFor(modelItem => obj.Name)</h4>
                                <h6 class="card-text">@Html.DisplayFor(modelItem => obj.Description)</h6>
                                
                            </div>
                            <div class="btn-group" role="group">
                                <a class="btn btn-group" asp-action="Edit" asp-route-id="@obj.Id">Edit</a>
                                <a class="btn btn-group" asp-action="Delete" asp-route-id="@obj.Id">Delete</a>
                            </div>
                        </div>
                    </div>
                }
            </div>

    </tbody>

</table>
</div>