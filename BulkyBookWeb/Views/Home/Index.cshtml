@{
    ViewData["Title"] = "Home Page";
}

<style>
    body, html {
        height: 100%;
        margin: 0;
        font-family: Arial, sans-serif;
        position: relative;
    }

    main {
        display: flex;
        justify-content: center;
        align-items: center;
        height: calc(100% - 40px); /* Adjust for the footer height */
    }

    .container {
        text-align: center;
    }

    footer {
        text-align: center;
        position: absolute;
        bottom: 0;
        width: 100%;
        background-color: #f8f8f8;
        padding: 10px 0;
    }
</style>

<main>
    <div class="container">
        <h2>Welcome to Our Store!</h2>
        <p>Discover the best deals on a wide range of products.</p>
        <a href="#" class="btn">Shop Now</a>
    </div>
</main>

<footer>
    <div class="container">
        <p>&copy; 2024 My E-Commerce Store. All rights reserved.</p>
    </div>
</footer>
